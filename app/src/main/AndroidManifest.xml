<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kimberley.evilhangman" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".GameplayActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName="com.example.kimberley.evilhangman.GameplayActivity"/>
        <activity android:name=".HistoryViewActivity"
            android:label="@string/action_highscores"
            android:parentActivityName="com.example.kimberley.evilhangman.GameplayActivity"/>
    </application>

</manifest>
